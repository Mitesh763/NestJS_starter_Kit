<%- contentFor('HeaderCss') %>

  <%- include("../partials/title-meta", { "title" : "Login" }) %>

    <%- contentFor('body') %>

      <div class="d-flex justify-content-center align-items-center">
        <div class="row w-50 ">
          <div class="card">
            <div class="card-header align-items-center d-flex">
              <h4 class="card-title mb-0 flex-grow-1">Create User Form</h4>
              <div class="flex-shrink-0">
              </div>
            </div>

            <div class="card-body ">
              <div class="live-preview">
                <form class="needs-validation" action="/users" method="POST" novalidate>
                  <div class="row">

                    <div class="mb-3">
                      <label for="nameinput" class="form-label">Name <span class="text-danger">*</span></label>
                      <input type="text" class="form-control" name="name" placeholder="Enter your name" 
                      value="<%= (typeof oldInput !== 'undefined' && oldInput && oldInput.name) ? oldInput.name : '' %>"
                      id="nameinput">
                      <div class="invalid-feedback">
                        Please enter name
                      </div>
                      <% if (error && error.name) { %>
                        <div class="text-danger">
                          <%= error.name[0] %>
                        </div>
                        <% } %>
                    </div>

                  </div>

                  <div class="">
                    <div class="mb-3">
                      <label for="phone_numberInput" class="form-label">Phone Number <span
                          class="text-danger">*</span></label>
                      <input type="tel" class="form-control" name="phone_number" placeholder="+(245) 451 45123"
                      value="<%= (typeof oldInput !== 'undefined' && oldInput && oldInput.phone_number) ? oldInput.phone_number : '' %>"
                        id="phone_numberInput">
                      <div class="invalid-feedback">
                        Please enter phone number
                      </div>
                      <% if (error && error.phone_number) { %>
                        <div class="text-danger">
                          <%= error.phone_number[0] %>
                        </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                      <label for="emailidInput" class="form-label">Email Address <span
                          class="text-danger">*</span></label>
                      <input type="email" class="form-control" name="email" placeholder="example@gamil.com"
                      value="<%= (typeof oldInput !== 'undefined' && oldInput && oldInput.email) ? oldInput.email : '' %>"
                         id="emailidInput">
                      <div class="invalid-feedback">
                        Please enter email
                      </div>
                      <% if (error && error.email) { %>
                        <div class="text-danger">
                          <%= error.email[0] %>
                        </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                      <label for="emailidInput" class="form-label">Password <span class="text-danger">*</span></label>
                      <input type="password" class="form-control" name="password" placeholder="Enter your password"
                      value="<%= (typeof oldInput !== 'undefined' && oldInput && oldInput.password) ? oldInput.password : '' %>"
                        id="emailidInput">
                      <div class="invalid-feedback">
                        Please enter password
                      </div>
                      <% if (error && error.password) { %>
                        <div class="text-danger">
                          <%= error.password[0] %>
                        </div>
                        <% } %>
                    </div>

                    <div class="row">
                      <div class="text-end col">
                        <button type="reset" class="btn btn-danger">Reset</button>
                      </div>
                      <div class="col">
                        <button type="submit" class="btn btn-primary">Create</button>
                      </div>
                    </div>
                  </div>

                </form>
              </div>
              <div class="d-none code-view">
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- contentFor('FooterJs') %>

        <script src="/assets/libs/prismjs/prism.js"></script>
        <script src="/assets/js/pages/passowrd-create.init.js"></script>